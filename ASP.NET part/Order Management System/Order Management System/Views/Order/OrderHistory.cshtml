@page
@model IEnumerable<Order_Management_System.Models.Order>
@{
    ViewData["Title"] = "Order History";
}

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
