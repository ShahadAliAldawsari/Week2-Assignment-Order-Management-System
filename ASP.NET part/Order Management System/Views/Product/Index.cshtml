@page
@model IEnumerable<Order_Management_System.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Order" asp-action="PlaceOrder" asp-route-productId="@product.ProductId">
                            Buy Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}