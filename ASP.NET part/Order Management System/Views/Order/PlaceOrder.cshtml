@page
@model Order_Management_System.Models.OrderDetails
@{
    ViewData["Title"] = "Place an Order";
}

<h2>Place an Order</h2>
<form asp-controller="Order" asp-action="PlaceOrder" method="post">
    <div class="form-group">
        <label>Product ID</label>
        <input asp-for="ProductId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Place Order</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}